extends layout.pug

block content

  nav.nav
    a(href='/')
      span &larr;
      |  Back

  article.portfolio-projects
    .inner-wrapper.flex-row-wrap.two-col
      .project-info-box.box
        h1= project.project_name
        p= project.description

      .project-tech-links-box.box
        h6 Technologies
        ul
          // iterate through each of the skills in technologies
          each tech in project.technologies
            li= tech

        // There is currently no live demo available for the projects
        a.btn-link(href=project.live_link) Live Demo
        a.btn-link(href=project.github_link) GitHub Repo

    .project-img-box.box
      // iterate through each of the images
      each image in project.image_urls
        img.project-img(src=image, alt=image)



    nav.nav
      a(href='/')
        span &larr;
        |  Back
